<%= render 'shared/notice' %>

<div class="uk-flex-middle uk-margin-medium" uk-grid>
  <div class="uk-width-expand@m">
    <h1 class="uk-heading-primary">Tap Templates</h1>
  </div>
  <div class="uk-width-auto@m">
    <%= link_to 'New Tap Template', new_tap_template_path, class: 'uk-button uk-button-primary' %>
  </div>
</div>

<%= render 'shared/table', locals: { id: 'tap_templates_table', dom: 'lrtip', paging: false, info: false } do %>
  <thead>
  <tr>
    <th>id</th>
    <th>name</th>
    <th>article number</th>
    <th data-orderable="false">Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @tap_templates.each do |tap_template| %>
    <tr>
      <td><%= tap_template.id %></td>
      <td><%= tap_template.name %></td>
      <td><%= tap_template.article_number %></td>
      <td>
        <%= link_to tap_template, class: 'uk-link-reset' do %>
          <span uk-icon="search"></span>
        <% end %>
        <%= link_to edit_tap_template_path(tap_template), class: 'uk-link-reset' do %>
          <span uk-icon="pencil"></span>
        <% end %>
        <%= link_to tap_template, method: :delete, data: { confirm: 'Are you sure?' }, class: 'uk-link-reset' do %>
          <span uk-icon="trash"></span>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
<% end %>
