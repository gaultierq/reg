<div class="uk-section uk-section-default">
  <div class="uk-container">
    <%= render 'shared/notice' %>

    <div class="uk-flex-middle uk-margin-medium" uk-grid>
      <div class="uk-width-expand@m">
        <h1 class="uk-heading-primary">Évènement <%= @event.id %></h1>
      </div>
      <div class="uk-width-auto@m">
        <%= link_to 'Modifier', edit_user_event_path(@event), class: 'uk-button uk-button-primary' %>
        <%= link_to 'Supprimer',user_event_path(@event), method: :delete, data: { confirm: 'Êtes-vous sûr ?' }, class: 'uk-button uk-button-danger' %>
      </div>
    </div>

    <div class="uk-overflow-auto">
      <table class="uk-table uk-table-striped">
        <tbody>
        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">id</td>
          <td><%= @event.id %></td>
        </tr>
        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">type</td>
          <td><%= @event.kind %></td>
        </tr>
        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">robinet</td>
          <td><%= @event.faucet.name %></td>
        </tr>
        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">N° article</td>
          <td><%= @event.faucet.article_number %></td>
        </tr>
        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">N° série</td>
          <td><%= @event.faucet.serial_number %></td>
        </tr>
        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">commentaire</td>
          <td><%= @event.comment %></td>
        </tr>
        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">Date de création</td>
          <td><%= @event.created_at %></td>
        </tr>
        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">Unité Industrielle</td>
          <% if @event.faucet.industrial_unit.present? %>
            <td><%= @event.faucet.industrial_unit.name %></td>
          <% end %>
        </tr>
        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">Auteur</td>
          <% if @event.admin_id.present? %>
            <td><%= @event.admin.full_name %></td>
          <% end %>
          <% if @event.user_id.present? %>
            <td><%= @event.user.full_name %></td>
          <% end %>
        </tr>
        </tbody>
      </table>
    </div>

    <div class="uk-margin-medium">
      <%= link_to 'Retour', user_faucet_path(@event.faucet), class: 'uk-button uk-button-default' %>
    </div>
  </div>
</div>