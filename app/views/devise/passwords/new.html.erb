<div class="uk-section">
  <div class="uk-flex uk-flex-column uk-flex-middle uk-container">
    <h2>Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'uk-width-medium', method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="uk-margin">
        <%= f.label :email, class: 'uk-form-label' %>
        <%= f.email_field :email, autofocus: true, class: 'uk-input' %>
      </div>

      <div class="uk-margin">
        <%= f.submit "Send me reset password instructions", class: 'uk-button uk-button-primary uk-width-1-1' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
