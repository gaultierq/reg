            <% end %>
          </li>
          <li>
            <%= link_to admin_users_path, data: { target: 'navbar.link' } do %>
              Utilisateurs
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="uk-navbar-right">
      <ul class="uk-navbar-nav">
