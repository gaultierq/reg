          <li>
            <%= link_to '#', class: 'uk-navbar-toggle uk-hidden@m', data: { action: 'navbar#toggle' } do %>
              <span uk-navbar-toggle-icon></span>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_admin_session_path, class: 'uk-visible@m', method: :delete do %>
              Log out
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>

  <%= yield %>

