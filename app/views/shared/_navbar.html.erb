      <%= link_to root_path, class: 'uk-navbar-item uk-logo' do %>
        REG
      <% end %>

      <ul class="uk-navbar-nav uk-visible@m">
        <% if admin_signed_in? %>
          <li>
            <%= link_to admin_industrial_units_path, data: { target: 'navbar.link' } do %>
