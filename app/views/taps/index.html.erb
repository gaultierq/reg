<%= render 'shared/notice' %>

<div class="uk-flex-middle uk-margin-medium" uk-grid>
  <div class="uk-width-expand@m">
    <h1 class="uk-heading-primary">Taps</h1>
  </div>
  <div class="uk-width-auto@m">
    <%= link_to 'New Tap', new_tap_path, class: 'uk-button uk-button-primary' %>
  </div>
</div>

<%= render 'shared/table', locals: { id: 'taps_table', dom: 'lrtip', paging: false, info: false,
                                     columns: %w[id name rfid_number serial_number number_customer_tag manufacturing_date
                                     sales_number customer_order_number article_number industrial_unit_id],
                                     url: taps_path(format: :json) } do %>
  <thead>
  <tr>
    <th>id</th>
    <th>Name</th>
    <th>Rfid number</th>
    <th>Serial number</th>
    <th>Number customer tag</th>
    <th>Manufacturing date</th>
    <th>Sales number</th>
    <th>Customer order number</th>
    <th>Article number</th>
    <th>Industrial unit</th>
  </tr>
  </thead>
<% end %>
