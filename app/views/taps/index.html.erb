<%= render 'shared/notice' %>

<div class="uk-flex-middle uk-margin-medium" uk-grid>
  <div class="uk-width-expand@m">
    <h1 class="uk-heading-primary">Taps</h1>
  </div>
  <div class="uk-width-auto@m">
    <%= link_to 'New Tap', new_tap_path, class: 'uk-button uk-button-primary' %>
  </div>
</div>

<%= render 'shared/table', locals: { id: 'taps_table', dom: 'lrtip', paging: false, info: false } do %>
  <thead>
  <tr>
    <th>id</th>
    <th>Name</th>
    <th>Rfid number</th>
    <th>Serial number</th>
    <th>Number customer tag</th>
    <th>Manufacturing date</th>
    <th>Sales number</th>
    <th>Customer order number</th>
    <th>Article number</th>
    <th>Industrial unit</th>
    <th data-orderable="false">Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @taps.each do |tap| %>
    <tr>
      <td><%= tap.id %></td>
      <td><%= tap.name %></td>
      <td><%= tap.rfid_number %></td>
      <td><%= tap.serial_number %></td>
      <td><%= tap.number_customer_tag %></td>
      <td><%= tap.manufacturing_date %></td>
      <td><%= tap.sales_number %></td>
      <td><%= tap.customer_order_number %></td>
      <td><%= tap.article_number %></td>
      <td><%= tap.industrial_unit&.name %></td>
      <td>
        <%= link_to tap, class: 'uk-link-reset' do %>
          <span uk-icon="search"></span>
        <% end %>
        <%= link_to edit_tap_path(tap), class: 'uk-link-reset' do %>
          <span uk-icon="pencil"></span>
        <% end %>
        <%= link_to tap, method: :delete, data: { confirm: 'Are you sure?' }, class: 'uk-link-reset' do %>
          <span uk-icon="trash"></span>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
<% end %>