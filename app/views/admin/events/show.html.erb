<div class="uk-section uk-section-default">
  <div class="uk-container">
    <%= render 'shared/notice' %>

    <div class="uk-flex-middle uk-margin-medium" uk-grid>
      <div class="uk-width-expand@m">
        <h1 class="uk-heading-primary">Event <%= @event.id %></h1>
      </div>
      <div class="uk-width-auto@m">
        <%= link_to 'Edit', edit_event_path(@event), class: 'uk-button uk-button-primary' %>
        <%= link_to 'Destroy', @event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'uk-button uk-button-danger' %>
      </div>
    </div>

    <div class="uk-overflow-auto">
      <table class="uk-table uk-table-striped">
        <tbody>
        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">Name</td>
          <td><%= @event.tap.name %></td>
        </tr>

        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">Article number</td>
          <td><%= @event.kind %></td>
        </tr>
        </tbody>
      </table>
    </div>

    <div class="uk-margin">
      <%= link_to 'Back', events_path, class: 'uk-button uk-button-default' %>
    </div>
  </div>
</div>