<div class="uk-section uk-section-default">
  <div class="uk-container">
    <div class="uk-flex-middle uk-margin-medium" uk-grid>
      <div class="uk-width-expand@m">
        <h1 class="uk-heading-primary">Editing Event</h1>
      </div>
      <div class="uk-width-auto@m">
        <%= link_to 'Show', @event, class: 'uk-button uk-button-primary' %>
        <%= link_to 'Destroy', @event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'uk-button uk-button-danger' %>
      </div>
    </div>
    <%= render 'form', event: @event %>
  </div>
</div>