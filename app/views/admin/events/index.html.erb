<div class="uk-section uk-section-default">
  <div class="uk-container">
    <%= render 'shared/notice' %>

    <div class="uk-flex-middle uk-margin-medium" uk-grid>
      <div class="uk-width-expand@m">
        <h1 class="uk-heading-primary">Events</h1>
      </div>
      <div class="uk-width-auto@m">
        <%= link_to 'New Events', new_event_path, class: 'uk-button uk-button-primary' %>
      </div>
    </div>

    <%= render 'shared/table', locals: { id: 'events_table', dom: 'lrtip', paging: false, info: false } do %>
      <thead>
      <tr>
        <th>id</th>
        <th>tap</th>
        <th>kind</th>
        <th data-orderable="false">Actions</th>
      </tr>
      </thead>

      <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.id %></td>
          <td><%= event.tap.name %></td>
          <td><%= event.kind %></td>
          <td class="uk-flex uk-flex-center">
            <ul class="uk-iconnav">
              <li>
                <%= link_to event do %>
                  <span uk-icon="search", uk-tooltip="Show"></span>
                <% end %>
              </li>
              <li>
                <%= link_to edit_event_path(event) do %>
                  <span uk-icon="pencil", uk-tooltip="Edit"></span>
                <% end %>
              </li>
              <li>
                <%= link_to event, method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <span uk-icon="trash", uk-tooltip="Destroy"></span>
                <% end %>
              </li>
            </ul>
          </td>
        </tr>
      <% end %>
      </tbody>
    <% end %>
  </div>
</div>