<%= form_with(model: [:admin, @attachment], local: true, data: {controller: 'form', form_errors: attachment.errors.messages.keys.join(',')}) do |form| %>
  <fieldset class="uk-fieldset">
    <% if attachment.errors.any? %>
      <div id="error_explanation" class="uk-alert-danger" uk-alert>
        <h2><%= t("errors.template.header", count: attachment.errors.count, model: 'évènement') %></h2>

        <ul>
          <% attachment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="uk-margin">
      <%= form.label :kind, "Type", class: 'uk-form-label' %>
      <%= form.select :kind, Attachment.kinds.keys, {}, {class: 'uk-select', data: {target: 'form.input'}} %>
    </div>

    <div class="uk-margin">
      <div>
        <%= form.label :pdf_label, "Attacher un PDF", class: 'uk-form-label' %>
      </div>
      <div uk-form-custom="target: input[type=text]">
        <%= form.file_field :pdf, accept: "application/pdf" %>
        <button class="uk-button uk-button-default" type="button" tabindex="-1">Choisir</button>
        <%= form.text_field :pdf, disabled: true, placeholder: "Choisir un pdf", class: "uk-input uk-form-width-medium" %>
      </div>
    </div>

    <div class="uk-margin-medium">
      <%= link_to 'Retour', admin_attachments_path, class: 'uk-button uk-button-default' %>
      <%= form.submit "Enregistrer", class: 'uk-button uk-button-primary' %>
    </div>
  </fieldset>
<% end %>