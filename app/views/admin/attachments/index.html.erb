<div class="uk-section uk-section-default">
  <div class="uk-container">
    <%= render 'shared/notice' %>

    <div class="uk-flex-middle uk-margin-medium" uk-grid>
      <div class="uk-width-expand@m">
        <h1 class="uk-heading-primary">GED</h1>
      </div>
      <div class="uk-width-auto@m">
        <%= link_to 'Nouveau Document', new_admin_attachment_path, class: 'uk-button uk-button-primary' %>
      </div>
    </div>

    <div class="uk-section-small uk-padding-remove-top">
      <h3 class="uk-heading-divider">Maintenance</h3>
      <%= render 'shared/table', locals: { id: 'attachment_maintenance_table', dom: 'lrtip', paging: false, info: false } do %>
        <thead>
        <tr>
          <th>id</th>
          <th>type</th>
          <th data-orderable="false">actions</th>
        </tr>
        </thead>

        <tbody>
        <% @attachments.where(kind: :maintenance).each do |attachment| %>
          <tr>
            <td><%= attachment.id %></td>
            <td><%= attachment.kind %></td>
            <td class="uk-flex uk-flex-center">
              <ul class="uk-iconnav">
                <li>
                  <%= link_to admin_attachment_path(attachment) do %>
                    <span uk-icon="search", uk-tooltip="Détails"></span>
                  <% end %>
                </li>
                <li>
                  <%= link_to edit_admin_attachment_path(attachment) do %>
                    <span uk-icon="pencil", uk-tooltip="Modifier"></span>
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_attachment_path(attachment), method: :delete, data: { confirm: 'Êtes-vous sûr ?' } do %>
                    <span uk-icon="trash", uk-tooltip="Supprimer"></span>
                  <% end %>
                </li>
              </ul>
            </td>
          </tr>
        <% end %>
        </tbody>
      <% end %>
    </div>
  </div>
</div>