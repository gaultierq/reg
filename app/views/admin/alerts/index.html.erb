<div class="uk-section uk-section-default">
  <div class="uk-container">
    <%= render 'shared/notice' %>

    <div class="uk-flex-middle uk-margin-medium" uk-grid>
      <div class="uk-width-expand@m">
        <h1 class="uk-heading-primary">Alertes</h1>
      </div>
      <div class="uk-width-auto@m">
        <%= link_to 'Nouvelle Alerte', new_admin_alert_path, class: 'uk-button uk-button-primary' %>
      </div>
    </div>

    <div class="uk-padding-remove-top">
      <%= render 'shared/table', locals: { id: 'alerts_maintenance_table', dom: 'lrtip', paging: false, info: false } do %>
        <thead>
          <tr>
            <th>id</th>
            <th>unité industrielle</th>
            <th>robinet</th>
            <th>date</th>
            <th data-orderable="false">actions</th>
          </tr>
        </thead>

        <tbody>
          <% @alerts.each do |alert| %>
            <tr>
              <td><%= alert.id %></td>
              <td><%= alert.industrial_unit.name %></td>
              <td><%= alert.faucet.name %></td>
              <td><%= alert.date %></td>
              <td class="uk-flex uk-flex-center">
                <ul class="uk-iconnav">
                  <li>
                    <%= link_to admin_alert_path(alert) do %>
                      <span uk-icon="search", uk-tooltip="Détails"></span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to edit_admin_alert_path(alert) do %>
                      <span uk-icon="pencil", uk-tooltip="Modifier"></span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to admin_alert_path(alert), method: :delete, data: {confirm: 'Êtes-vous sûr ?'} do %>
                      <span uk-icon="trash", uk-tooltip="Supprimer"></span>
                    <% end %>
                  </li>
                </ul>
              </td>
            </tr>
          <% end %>
        </tbody>
      <% end %>
    </div>
  </div>
</div>