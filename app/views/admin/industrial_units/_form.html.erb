<%= form_with(model: [:admin, @industrial_unit], local: true, data: { controller: 'form', form_errors: industrial_unit.errors.messages.keys.join(',') }) do |form| %>
  <fieldset class="uk-fieldset">
    <% if industrial_unit.errors.any? %>
      <div id="error_explanation" class="uk-alert-danger" uk-alert>
        <h2><%= t("errors.template.header", count: industrial_unit.errors.count, model: 'unité industrielle') %></h2>

        <ul>
          <% industrial_unit.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="uk-margin">
      <%= form.label :name, "Nom", class: 'uk-form-label' %>
      <%= form.text_field :name, class: 'uk-input', data: { target: 'form.input' } %>
    </div>

    <div class="uk-margin">
      <%= form.label :address, "Adresse", class: 'uk-form-label' %>
      <%= form.text_field :address, class: 'uk-input', data: { target: 'form.input' } %>
    </div>

    <div class="uk-margin">
      <%= form.label :postcode, "Code Postal", class: 'uk-form-label' %>
      <%= form.text_field :postcode, class: 'uk-input', data: { target: 'form.input' } %>
    </div>

    <div class="uk-margin">
      <%= form.label :city, "Ville", class: 'uk-form-label' %>
      <%= form.text_field :city, class: 'uk-input', data: { target: 'form.input' } %>
    </div>

    <div class="uk-margin">
      <%= form.label :country, "Pays", class: 'uk-form-label' %>
      <%= form.text_field :country, class: 'uk-input', data: { target: 'form.input' } %>
    </div>

    <div class="uk-margin">
      <%= form.label :additional_information, "Informations complémentaires", class: 'uk-form-label' %>
      <%= form.text_area :additional_information, class: 'uk-textarea', data: { target: 'form.input' } %>
    </div>

    <div class="uk-margin">
      <%= form.label :process_information, "Informations sur le process", class: 'uk-form-label' %>
      <%= form.text_area :process_information, class: 'uk-textarea', data: { target: 'form.input' } %>
    </div>

    <%= form.fields_for :admin_industrial_units do |field_for| %>
      <div class="uk-margin">
        <%= field_for.label :admin_id, "Commercial", class: 'uk-form-label' %>
        <%= field_for.select :admin_id, Admin.salesman.collect { |salesman| [ salesman.full_name, salesman.id ] }, {}, {class: 'uk-select', data: {target: 'form.input'}} %>
      </div>
    <% end %>

    <% @industrial_unit.user_industrial_units.each do |user_industrial_unit| %>
      <%= form.fields_for :user_industrial_units, user_industrial_unit do |field_for| %>
        <% if user_industrial_unit.user.client? %>
          <div class="uk-margin">
            <%= field_for.label :user_id, "Client", class: 'uk-form-label' %>
            <%= field_for.select :user_id, User.client.collect {|client| [client.full_name, client.id]}, {}, {class: 'uk-select', data: {target: 'form.input'}} %>
          </div>
        <% else %>
          <div class="uk-margin">
            <%= field_for.label :user_id, "Technicien", class: 'uk-form-label' %>
            <%= field_for.select :user_id, User.technician.collect {|technician| [technician.full_name, technician.id]}, {}, {class: 'uk-select', data: {target: 'form.input'}} %>
          </div>
        <% end %>
      <% end %>
    <% end %>

    <div class="uk-margin-medium">
      <%= link_to 'Retour', admin_industrial_units_path, class: 'uk-button uk-button-default' %>
      <%= form.submit "Enregistrer", class: 'uk-button uk-button-primary' %>
    </div>
  </fieldset>
<% end %>
