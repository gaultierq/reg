<div class="uk-section uk-section-default">
  <div class="uk-container">
    <%= render 'shared/notice' %>

    <div class="uk-flex-middle uk-margin-medium" uk-grid>
      <div class="uk-width-expand@m">
        <h1 class="uk-heading-primary"><%= @industrial_unit.name %></h1>
      </div>
      <div class="uk-width-auto@m">
        <%= link_to 'Modifier', edit_admin_industrial_unit_path, class: 'uk-button uk-button-primary' %>
        <%= link_to 'Supprimer', admin_industrial_unit_path(@industrial_unit), method: :delete, data: { confirm: 'Êtes-vous sûr ?' }, class: 'uk-button uk-button-danger' %>
      </div>
    </div>

    <div class="uk-overflow-auto">
      <table class="uk-table uk-table-striped">
        <tbody>
        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">Nom</td>
          <td><%= @industrial_unit.name %></td>
        </tr>

        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">Adresse</td>
          <td><%= @industrial_unit.address %></td>
        </tr>

        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">Code Postal</td>
          <td><%= @industrial_unit.postcode %></td>
        </tr>

        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">Ville</td>
          <td><%= @industrial_unit.city %></td>
        </tr>

        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">Pays</td>
          <td><%= @industrial_unit.country %></td>
        </tr>

        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">Latitude</td>
          <td><%= @industrial_unit.latitude %></td>
        </tr>

        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">Longitude</td>
          <td><%= @industrial_unit.longitude %></td>
        </tr>

        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">Informations complémentaires</td>
          <td><%= @industrial_unit.additional_information %></td>
        </tr>

        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">Informations sur le process</td>
          <td><%= @industrial_unit.process_information %></td>
        </tr>

        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">Commercial</td>
          <td><%= @industrial_unit.admins.first.full_name %></td>
        </tr>

        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">Technicien</td>
          <td><%= @industrial_unit.users.find_by(kind: 'technician').full_name %></td>
        </tr>

        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">Client</td>
          <td><%= @industrial_unit.users.find_by(kind: 'client').full_name %></td>
        </tr>
        </tbody>
      </table>
    </div>

    <div class="uk-margin-medium">
      <%= link_to 'Retour', admin_industrial_units_path, class: 'uk-button uk-button-default' %>
    </div>
  </div>
</div>