<div class="uk-section uk-section-default">
  <div class="uk-container">
    <%= render 'shared/notice' %>

    <div class="uk-flex-middle uk-margin-medium" uk-grid>
      <div class="uk-width-expand@m">
        <h1 class="uk-heading-primary"><%= @technician.email %></h1>
      </div>
      <div class="uk-width-auto@m">
        <%= link_to 'Edit', edit_admin_technician_path(@technician), class: 'uk-button uk-button-primary' %>
        <%= link_to 'Destroy', admin_technician_path(@technician), method: :delete, data: { confirm: 'Are you sure?' }, class: 'uk-button uk-button-danger' %>
      </div>
    </div>

    <div class="uk-overflow-auto">
      <table class="uk-table uk-table-striped">
        <tbody>
        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">Email</td>
          <td><%= @technician.email %></td>
        </tr>

        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">Encrypted Password</td>
          <td><%= @technician.encrypted_password %></td>
        </tr>
        </tbody>
      </table>
    </div>

    <div class="uk-margin-medium">
      <%= link_to 'Back', admin_users_path, class: 'uk-button uk-button-default' %>
    </div>
  </div>
</div>