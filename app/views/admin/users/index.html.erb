<div class="uk-section uk-section-default">
  <div class="uk-container">
    <%= render 'shared/notice' %>

    <div class="uk-flex-middle uk-margin-medium" uk-grid>
      <div class="uk-width-expand@m">
        <h1 class="uk-heading-primary">Users</h1>
      </div>
      <div class="uk-width-auto@m">
        <%= link_to 'New Admin', '#', class: 'uk-button uk-button-primary' %>
        <%= link_to 'New Technician', '#', class: 'uk-button uk-button-primary' %>
      </div>
    </div>

    <div class="uk-section-small uk-padding-remove-top">
      <h3 class="uk-heading-divider">Admin</h3>
      <%= render 'shared/table', locals: { id: 'admins_table', dom: 'lrtip', paging: false, info: false } do %>
        <thead>
        <tr>
          <th>id</th>
          <th>email</th>
          <th data-orderable="false">Actions</th>
        </tr>
        </thead>

        <tbody>
        <% @admins.each do |admin| %>
          <tr>
            <td><%= admin.id %></td>
            <td><%= admin.email %></td>
            <td class="uk-flex uk-flex-center">
              <ul class="uk-iconnav">
                <li>
                  <%= link_to '#' do %>
                    <span uk-icon="search", uk-tooltip="Show"></span>
                  <% end %>
                </li>
                <li>
                  <%= link_to '#' do %>
                    <span uk-icon="pencil", uk-tooltip="Edit"></span>
                  <% end %>
                </li>
                <li>
                  <%= link_to '#', method: :delete, data: { confirm: 'Are you sure?' } do %>
                    <span uk-icon="trash", uk-tooltip="Destroy"></span>
                  <% end %>
                </li>
              </ul>
            </td>
          </tr>
        <% end %>
        </tbody>
      <% end %>
    </div>

    <div class="uk-section-small">
      <h3 class="uk-heading-divider">Technicians</h3>
      <%= render 'shared/table', locals: { id: 'technicians_table', dom: 'lrtip', paging: false, info: false } do %>
        <thead>
        <tr>
          <th>id</th>
          <th>email</th>
          <th data-orderable="false">Actions</th>
        </tr>
        </thead>

        <tbody>
        <% @technicians.each do |technician| %>
          <tr>
            <td><%= technician.id %></td>
            <td><%= technician.email %></td>
            <td class="uk-flex uk-flex-center">
              <ul class="uk-iconnav">
                <li>
                  <%= link_to '#' do %>
                    <span uk-icon="search", uk-tooltip="Show"></span>
                  <% end %>
                </li>
                <li>
                  <%= link_to '#' do %>
                    <span uk-icon="pencil", uk-tooltip="Edit"></span>
                  <% end %>
                </li>
                <li>
                  <%= link_to '#', method: :delete, data: { confirm: 'Are you sure?' } do %>
                    <span uk-icon="trash", uk-tooltip="Destroy"></span>
                  <% end %>
                </li>
              </ul>
            </td>
          </tr>
        <% end %>
        </tbody>
      <% end %>
    </div>
  </div>
</div>