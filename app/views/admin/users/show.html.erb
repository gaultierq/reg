<div class="uk-section uk-section-default">
  <div class="uk-container">
    <%= render 'shared/notice' %>

    <div class="uk-flex-middle uk-margin-medium" uk-grid>
      <div class="uk-width-expand@m">
        <h1 class="uk-heading-primary"><%= @user.email %></h1>
      </div>
      <div class="uk-width-auto@m">
        <%= link_to 'Modifier', edit_admin_user_path(@user), class: 'uk-button uk-button-primary' %>
        <%= link_to 'Supprimer', admin_user_path(@user), method: :delete, data: { confirm: 'Êtes-vous sûr ?' }, class: 'uk-button uk-button-danger' %>
      </div>
    </div>

    <div class="uk-overflow-auto">
      <table class="uk-table uk-table-striped">
        <tbody>
        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">Nom</td>
          <td><%= @user.full_name %></td>
        </tr>

        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">Adresse email</td>
          <td><%= @user.email %></td>
        </tr>

        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">Téléphone</td>
          <td><%= @user.phone_number %></td>
        </tr>

        <tr>
          <td class="uk-text-bold uk-text-uppercase uk-text-small uk-width-medium">Unités industrielles</td>
          <td>
            <table>
              <tbody>
              <% @user.industrial_units.each do |industrial_unit| %>
                <tr class="tr-transparent">
                  <td><%= industrial_unit.name %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </td>
        </tr>
        </tbody>
      </table>
    </div>

    <div class="uk-margin-medium">
      <%= link_to 'Retour', admin_peoples_path, class: 'uk-button uk-button-default' %>
    </div>
  </div>
</div>