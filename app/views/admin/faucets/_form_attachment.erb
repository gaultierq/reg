<div class="uk-margin" id="<%= "existing_#{kind.to_s}_attachment_group" %>">
  <%= form.label "existing_#{kind.to_s}_attachment".to_sym, "Documents", class: 'uk-form-label' %>
  <%= form.select "existing_#{kind.to_s}_attachment",
                  already_attachment(kind),
                  {
                      selected: selected_attachment(kind)
                  },
                  {
                      multiple: true,
                      id: "existing_#{kind.to_s}_attachment",
                      data: {target: 'form.input'}
                  }
  %>
</div>
<div class="uk-margin">
  <%= form.file_field "new_#{kind.to_s}_attachment".to_sym, multiple: true %>
</div>

