<div class="uk-section uk-section-default">
  <div class="uk-container">
    <%= render 'shared/notice' %>

    <div class="uk-flex-middle uk-margin-medium" uk-grid>
      <div class="uk-width-expand@m">
        <h1 class="uk-heading-primary">Modèles de Robinet</h1>
      </div>
      <div class="uk-width-auto@m">
        <%= link_to 'Nouveau Modèle', new_admin_tap_template_path, class: 'uk-button uk-button-primary' %>
      </div>
    </div>

    <%= render 'shared/table', locals: { id: 'tap_templates_table', dom: 'lrtip', paging: false, info: false } do %>
      <thead>
      <tr>
        <th>id</th>
        <th>nom</th>
        <th>N° article</th>
        <th>DN</th>
        <th data-orderable="false">actions</th>
      </tr>
      </thead>

      <tbody>
      <% @tap_templates.each do |tap_template| %>
        <tr>
          <td><%= tap_template.id %></td>
          <td>
            <%= link_to admin_tap_template_path(tap_template) do %>
              <%= tap_template.name %>
            <% end %>
            </td>

          <td><%= tap_template.article_number %></td>
          <td><%= tap_template.dn %></td>
          <td class="uk-flex uk-flex-center">
            <ul class="uk-iconnav">
              <li>
                <%= link_to admin_tap_template_path(tap_template) do %>
                  <span uk-icon="search", uk-tooltip="Détails"></span>
                <% end %>
              </li>
              <li>
                <%= link_to edit_admin_tap_template_path(tap_template) do %>
                  <span uk-icon="pencil", uk-tooltip="Modifier"></span>
                <% end %>
              </li>
              <li>
                <%= link_to admin_tap_template_path(tap_template), method: :delete, data: { confirm: 'Êtes-vous sûr ?' } do %>
                  <span uk-icon="trash", uk-tooltip="Supprimer"></span>
                <% end %>
              </li>
            </ul>
          </td>
        </tr>
      <% end %>
      </tbody>
    <% end %>
  </div>
</div>